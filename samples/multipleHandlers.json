{
  "handlers": [
    {
      "id": "on-create-user",
      "request": {
        "method": "POST",
        "url": "/users"
      },
      "response": {
        "status": 201,
        "headers": {
          "Location": "/users/123"
        },
        "body": "/users/123"
      }
    },
    {
      "id": "on-get-user",
      "request": {
        "method": "GET",
        "url": "/users/:id"
      },
      "response": {
        "status": 200,
        "body": {
          "username": "colincoller"
        }
      }
    },
    {
      "id": "on-delete-user",
      "request": {
        "method": "DELETE",
        "url": "/users/:id"
      },
      "response": {
        "status": 204
      }
    }
  ]
}
